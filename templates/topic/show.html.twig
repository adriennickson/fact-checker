        back to list
    </a>

    <a href="{{ path('topic_edit', {'id': topic.id}) }}">edit</a>

    {{ include('topic/_delete_form.html.twig') }}


{# https://tailwindcomponents.com/component/facebook-comments-column #}
<div x-data="{ open1: false, open2: false }">
  <div class="bg-gray-100 grid grid-cols-1 md:grid-cols-3 py-4">
    <div class="w-full sm:max-w-7xl h-auto px-3 py-2 flex flex-col space-y-2">

        <table class="border-collapse border border-green-800">
            <tbody>
                <tr class="align-top text-left">
                    <th class="border border-gray-200 p-2">Title</th>
                    <td class="border border-gray-200 p-2">{{ topic.title }}</td>
                </tr>
                <tr class="align-top text-left">
                    <th class="border border-gray-200 p-2">Description</th>
                    <td class="border border-gray-200 p-2">{{ topic.description }}</td>
                </tr>
                <tr class="align-top text-left whitespace-nowrap">
                    <th class="border border-gray-200 p-2">Date de cr√©ation</th>
                    <td class="border border-gray-200 p-2">{{ topic.createdAt ? topic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>
    
    </div>
    
    <div class="bg-white items-start w-full sm:max-w-7xl sm:w-2/3 col-span-2 h-auto shadow px-3 py-2 flex flex-col space-y-2">

        {% for comment in topic.comments %}
            {% if not comment.parent %}       
                <div class="flex items-start space-x-2">
                    <div class="flex justify-start space-x-2">
                        <div class="block">
                            <div class="flex justify-start space-x-2">
                                <div class="bg-gray-100 w-auto rounded-xl px-2 pb-2">
                                    <div class="font-medium">
                                        <a href="#" class="hover:underline text-sm font-bold">
                                            <small>{{ comment.autor.firstName }} {{ comment.autor.lastName }}</small>
                                        </a>
                                    </div>
                                    <div class="text-xs">
                                        {{ comment.content }}
                                    </div>
                                    </div>
                            </div>
                            <div class="flex justify-start text-xs w-full">
                                <div class="font-semibold text-gray-700 px-2 flex items-start justify-center space-x-1">
                                    <a href="#" class="hover:underline">
                                    <small>{{ comment.createdAt|ago }}</small>
                                    </a>
                                </div>
                            </div>

                            <!-- Subcomment Sample -->
                            <div class="ml-10 flex flex-col items-start space-x-2 space-y-2">

                                {% for subcomment in comment.comments %}                            
                                    <div class="flex items-start justify-start space-x-2">
                                        <div class="block">
                                        <div class="bg-gray-100 w-auto rounded-xl px-2 pb-2">
                                            <div class="font-medium">
                                            <a href="#" class="hover:underline text-sm font-bold">
                                                <small>{{ subcomment.autor.firstName }} {{ subcomment.autor.lastName }}</small>
                                            </a>
                                            </div>
                                            <div class="text-xs">
                                                {{ subcomment.content }}
                                            </div>
                                        </div>
                                        <div class="flex justify-start items-start text-xs w-full">
                                            <div class="font-semibold text-gray-700 px-2 flex items-start justify-center space-x-1">
                                            <a href="#" class="hover:underline">
                                                <small>{{ subcomment.createdAt|ago }}</small>
                                            </a>
                                            </div>
                                        </div>
                                        </div>

                                    </div>
                                    
                                {% endfor %}
                                {% include 'topic/_comment.html.twig' with {'topic': topic,'parent': comment.id} %}

                            </div>

                        </div>
                    </div>
                </div>            
            {% endif %}
        {% endfor %}

        {% include 'topic/_comment.html.twig' with {'topic': topic,'parent': null} %}

      
    </div>
    
  </div>
</div>

{% endblock %}
